{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
  },
  "extends": ["standard", "plugin:react/recommended"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "warn",
    "operator-linebreak": 0,
    "no-class-assign": 0,
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "React": true
  }
}
